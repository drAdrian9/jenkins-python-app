pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/drAdrian9/jenkins-python-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat '''
                python -m pip install --upgrade pip
                python -m pip install --no-cache-dir --upgrade --upgrade-strategy only-if-needed -r requirements.txt
                '''
            }
        }

        stage('Restart App with Logging') {
            steps {
                bat '''
                REM Kill any process using port 5000
                for /f "tokens=5" %%a in ('netstat -ano ^| findstr :5000') do taskkill /PID %%a /F

                REM Start the app in the background and log output
                start /B cmd /c "python app.py > app.log 2>&1"
                '''
            }
        }
    }

     post {
        success {
            emailext (
                to: 'lahdalahjih@gmail.com',
                subject: "‚úÖ Jenkins Build Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                Good news! üéâ
                Job: ${env.JOB_NAME}
                Build Number: ${env.BUILD_NUMBER}
                Status: SUCCESS
                URL: ${env.BUILD_URL}
                """
            )
        }
        failure {
            emailext (
                to: 'lahdalahjih@gmail.com',
                subject: "‚ùå Jenkins Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                Oops! Something went wrong üò¢
                Job: ${env.JOB_NAME}
                Build Number: ${env.BUILD_NUMBER}
                Status: FAILED
                URL: ${env.BUILD_URL}
                """
            )
        }
    }
}
