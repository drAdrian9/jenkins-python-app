pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/drAdrian9/jenkins-python-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat '''
                python -m pip install --upgrade pip
                python -m pip install --no-cache-dir --upgrade --upgrade-strategy only-if-needed -r requirements.txt
                '''
            }
        }

        stage('Restart App with Logging') {
            steps {
                bat '''
                REM Kill any process using port 5000
                for /f "tokens=5" %%a in ('netstat -ano ^| findstr :5000') do taskkill /PID %%a /F

                REM Start the app in the background and log output
                start /B cmd /c "python app.py > app.log 2>&1"
                '''
            }
        }
    }

     post {
        success {
            emailext(
                subject: "✅ Jenkins Job: ${env.JOB_NAME} #${env.BUILD_NUMBER} SUCCESS",
                body: """Hello Team,<br><br>
                The Jenkins job <b>${env.JOB_NAME}</b> with build number 
                <b>${env.BUILD_NUMBER}</b> has completed successfully.<br><br>
                Check console output at: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
                """,
                to: "lahdalahjih@gmail.com"
            )
        }
        failure {
            emailext(
                subject: "❌ Jenkins Job: ${env.JOB_NAME} #${env.BUILD_NUMBER} FAILED",
                body: """Hello Team,<br><br>
                The Jenkins job <b>${env.JOB_NAME}</b> has <b>FAILED</b>.<br><br>
                Check console output at: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a>
                """,
                to: "lahdalahjih@gmail.com"
            )
        }
    }
}
